<h1>Hello, here is your list of exercises!</h1>

<form method="post">
	Exercise:	
	<input type="text" name="exercise" id="exercise"><br>
	Reps:	
	<input type="number" name="reps" id="reps "min="1" max="10000"><br>
	Weight:	
	<input type="number" name="weight" id="weight "min="1" max="10000"><br>
	Date:	
	<input type="date" name="date" id="date"><br>
	lbs (checked), Kg (unchecked):	
	<input type="checkbox" name="measurement" id="cb" value="Pounds"><br>
	<input type="submit" name="Add Item" value="Add Item">
</form>

<table>
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>In Pounds?</th>
	</tr>
	{{#if results}}
		{{#each results}}
			<tr>
				<td>{{this.name}}</td>
				<td>{{this.reps}}</td>
				<td>{{this.weight}}</td>
				<td>{{this.date}}</td>
				<td>In Pounds: {{this.lbs}}</td>
				<td>
					<form method="post">
						<input type="hidden" name="id" value="{{this.id}}">
						<input type="submit" name="Update" value="Update">
				    </form>
			    </td>
				<td>
					<form method="post">
						<input type="hidden" name="id" value="{{this.id}}">
						<input type="submit" name="Delete" value="Delete">
				    </form>
			    </td>
			</tr>
		{{/each}}
	{{/if}}
</table>